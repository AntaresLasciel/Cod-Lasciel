    private void btnCalcularActionPerformed(java.awt.event.ActionEvent evt) {                                            
        
        
        double LadoA = Double.parseDouble(txtLadoA.getText().trim());
        double LadoB = Double.parseDouble(txtAnguloB.getText().trim());
        double LadoC = Double.parseDouble(txtAnguloC.getText().trim());
        double H = Double.parseDouble(txtTrianguloAltura.getText().trim());
        double Area;
        double AnguloA = 0;
        double AnguloB = 0;
        double AnguloC = 0;
        int tipo = 0;
        
        String Triangle;
        double Base;
        if(LadoA == LadoB && LadoB == LadoC && LadoA == LadoC){
            Triangle = "equilatero";
            tipo = 1;
            Base = LadoA;
            
        }
        else if(LadoA == LadoB ||  LadoA == LadoC || LadoB == LadoC){
         Triangle = "isoceles"; 
         Base = Math.max(LadoA, Math.max(LadoB, LadoC));
        }   
        else{
            Triangle = "escaleno";
            Base = Math.max(LadoA, Math.max(LadoB, LadoC));
        }
    
        switch(tipo){
	case 1: 
            AnguloA = AnguloB = AnguloC = 60;
        break; 
            
          
        default: {
              AnguloA = Math.acos((Math.pow(LadoB, 2)+Math.pow(LadoC, 2)-Math.pow(LadoA, 2))/(2*LadoB*LadoC) );
              AnguloB = Math.acos((Math.pow(LadoC, 2)+Math.pow(LadoA, 2)-Math.pow(LadoB, 2))/(2*LadoA*LadoC));
              AnguloC = Math.acos((Math.pow(LadoA, 2)+Math.pow(LadoB, 2)-Math.pow(LadoC, 2))/(2*LadoA*LadoB));
            }



        }
            
        
        Area = H*Base/2;
        
        lblValorAnguloA.setText(String.valueOf(Math.toDegrees(AnguloA)));
        lblValorAnguloB.setText(String.valueOf(Math.toDegrees(AnguloB)));
        lblValorAnguloC.setText(String.valueOf(Math.toDegrees(AnguloC)));
        lblValorArea.setText(String.valueOf(Area));
        lblTipoTriangulo.setText(Triangle);
    
        
        
    }                                           

